divider-height = 40px

@media screen and (max-width 900px)
  .marketing-signup-modal-container .modalize-dialog
    max-width 100%
    max-height 100%
    height 100%

.marketing-signup-modal
  text-align center
  display flex
  align-items stretch
  &-left
    background-size cover
    background-position-x right
    background-position-y calc(100% \+ 1px)

    @media screen and (max-width 900px)
      display none

  &-left, &-right
    width 50%
    img
      width 100%

  &-right
    padding 30px
    min-width 450px
    @media screen and (max-width 900px)
      width 100%
      min-width 100%

    &__logo
      margin-top 10px

  &-h2
    margin-top 20px
    margin-bottom 20px
    garamond-size('headline')

  &-divider
    width 100%
    height divider-height
    position relative
    color transparent
    &:before
      content '.'
      color transparent
      border-top 1px solid gray-lighter-color
      position absolute
      width 100%
      left 0
      top (divider-height / 2)
    &:after
      content 'or'
      avant-garde()
      avant-garde-size('s-headline')
      color gray-darker-color
      text-align center
      background white
      position absolute
      width 60px
      height divider-height
      line-height divider-height
      left calc(50% \- 35px)
      top 0
      z-index 1

  &-small
    display block
    margin 10px 0 20px 0
    color gray-darker-color
    garamond-size('l-caption')

  &-have-account
    color gray-darker-color

  &-container.modalize
    z-index zindex-flash !important

  &-container .icon-close
    font-size 18px
    top -10px
    right @top
    position relative

  &-fb
    background #3A4C95

  &-copy a
    color gray-darker-color
    text-decoration underline

  &-error
    color red-color
    padding-top 7px
    display none

  .bordered-input
    width 100%
    margin-bottom 10px

  .avant-garde-button-black
    width 100%

  .icon-close
    font-size 18px

