.artwork-partner-stub
  serif('s-body')
  border-bottom 1px solid gray-lighter-color
  line-height 1.33
  padding 25px 0
  
  &__name
    garamond()
    fine-faux-underline()
    display inline-block
    font-size 20px
    font-weight 600
    margin-bottom 8px

    &:not([href])
      background none
      cursor default

  &__location
  &__card
    font-size 15px
    position relative
    span
      display inline-block
      &.icon
        position absolute
          
      &.content
        padding 0 0 5px 28px
        line-height 23px
    
  &__location .icon
    top 0
    left 3px
    
  &__card .icon
      top 3px

  &__phone
    serif('l-caption')
    margin distance(5px) 0

    &
    > a
      color gray-darker-color
    > a
      fine-faux-underline()
      margin-top -2px
      padding-bottom -(@margin-top)

    &__locations
      display none
      margin distance(gutter / 2) 0
      &[data-length='1']
        margin 0

      &__location
        margin distance(gutter / 2) 0
