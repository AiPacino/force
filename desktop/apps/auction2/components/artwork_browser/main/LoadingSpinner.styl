.loading-spinner-component
  .loading-spinner
    clear both
    position relative
    margin-bottom 50px
    margin-top 20px

  +respond-desktop()
    .loading-spinner
      margin-bottom 50px
      margin-top 20px

  +respond-mobile()
    &_fullscreen
      background-color rgba(255, 255, 255, 0.6)
      height 100%
      position relative

      .loading-spinner
        top 20px
