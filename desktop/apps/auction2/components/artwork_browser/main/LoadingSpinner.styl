.loading-spinner-component
  .loading-spinner
    clear both
    position relative

  +respond-desktop()
    .loading-spinner
      margin-top 20px
      margin-bottom 50px

  +respond-mobile()
    margin-top: 40px

  +respond-mobile()
    &_fullscreen
      background-color rgba(255, 255, 255, 1.0)
      width 100%
      height 100%
      position absolute
      top -65px
      z-index 1

      .loading-spinner
        top 30px
