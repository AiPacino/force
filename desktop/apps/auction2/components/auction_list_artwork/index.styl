.auction2-list-artwork
  display flex
  justify-content space-between
  align-items center
  height 200px
  text-align left
  width 100%
  border-bottom 1px solid gray-lighter-color
  garamond-size('s-body')
  a
    text-decoration none

  &__image-container
    width 250px

  &__image > img
    max-height 150px
    max-width 200px
    margin auto

  &__metadata
    width 30%
    text-align left

  &__lot-number
    avant-garde()
    font-size 11px
    color black
    margin-bottom 2px
    text-align center

  .auction2-bid-status
    text-align right
