.venice-carousel
  .mgr-horizontal-nav
    .mgr-cells.js-mgr-cells
      for section in curation.get('sections')
        .mgr-cell.js-mgr-cell
          .venice-overlay(style="background-image:url(#{section.cover_image})")
            .venice-overlay__text
              .venice-overlay__title Inside the Biennale
              .venice-overlay__sub-title= section.title
              if section.published
                .venice-overlay__play
                  .venice-overlay__play-button
                  .venice-overlay__play-text Play Video
                  .venice-overlay__play-length= section.video_length
    include ../../../../../components/merry_go_round/templates/horizontal_navigation
