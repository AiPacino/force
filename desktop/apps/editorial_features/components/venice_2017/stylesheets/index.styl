.venice-feature
  background-color black
  color white

.venice-nav
  position absolute
  top 0
  left 0
  right 0
  z-index 10
  border-bottom 1px solid white
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  height 54px
  a
    color white
    text-decoration none
  &__sticky-right, &__sticky-left
    margin 0px 20px
  &__sticky-right
    margin-right -1
    avant-garde-size('body')
  &__sticky-left
    display flex
    align-items center
    .venice-nav__sticky-ubs-logo img
      height 30px
    .venice-nav__plus
      transform rotate(45deg)
      margin 10px
      font-size 17px
      font-smoothing antialiased

.venice-header
  min-height 100vh

.venice-overlay, #vrvideo
  min-height 100vh
  width 100%
  position absolute

.venice-overlay
  display flex
  flex-direction column
  justify-content center
  align-items center
  color white
  background-size cover
  background-position center
  &__title
    garamond()
    font-size 80px
    margin-bottom 30px
  &__sub-title
    garamond-size('xl-headline')
    margin-bottom 30px
  &__play
    width 180px
    height 50px
    border 1px solid white
    background-color rgba(0,0,0,0.5)
    display flex
    justify-content center
    align-items center
    transition background-color 0.5
    cursor pointer
    &:hover
      background-color rgba(0,0,0,1)
    &-text
      margin-right 20px
      avant-garde-size('s-headline')
    &-length
      garamond-size('l-caption')
    &-button
      margin-right 10px
      width 0
      height 0
      border-style solid
      border-width 5px 0 5px 10px
      border-color transparent transparent transparent white

.venice-overlay, .venice-nav
  transition display 0.5s ease

.venice-body
  max-width 1100px
  width 100%
  margin 65px auto
  padding 0 2em
  a
    color white
  h2
    garamond-size('headline')
    margin-bottom 20px
  p
    garamond-size('s-headline')
    font-size 23px
    line-height 28px
  &--article, &--series
    display flex
    justify-content space-between
  &--article
    margin-bottom 180px
  &--series
    margin-bottom 160px
    .venice-body__left
      display flex
      justify-content space-between
      flex-direction column
  &__left
    width 50%
  &__right
    width 35%
    min-width 365px
  &__partner
    text-decoration none
    avant-garde-size('body')
    display flex
    margin 40px 0
    span
      width 135px
      margin-right 20px
    img
      height 40px
  &__index-item
    garamond-size('l-body')
    border-bottom 1px solid
    a
      display flex
      align-items center
      text-decoration none
      height 60px
      opacity .7
      &.published
        opacity 1
    svg
      margin-left -15px
    &:first-child
      border-top 1px solid
    .chapter, .title
      margin-right 10px
  &__item-description
    margin-bottom 40px
  &__headset-prompt
    p
      font-style italic
  &__item-share
    display flex
    align-items center
    border 1px solid
    height 50px
    .share-item
      width 33%
      height 100%
      &:first-child, &:nth-child(2)
        border-right 1px solid
    a
      text-decoration none
      display flex
      justify-content center
      align-items center
      height 100%


.venice-footer
  max-width 1100px
  width 100%
  min-height 160px
  padding 0 2em
  margin 0 auto
  h2
    garamond-size('headline')
    &.title
      margin-bottom 40px
  &__articles
    padding-top 20px
    border-top 1px solid gray-color
