.venice-feature
  background-color black
  color white

.venice-header
  width 100vw
  height 100vh

.venice-overlay, #vrvideo
  width 100vw
  height 100vh
  position absolute

.venice-overlay
  display flex
  flex-direction column
  justify-content center
  align-items center
  color white
  &__title
    garamond()
    font-size 80px
    margin-bottom 30px
  &__sub-title
    garamond-size('xl-headline')
    margin-bottom 30px
  &__play
    width 180px
    height 50px
    border 1px solid white
    background-color rgba(0,0,0,0.5)
    display flex
    justify-content center
    align-items center
    transition background-color 0.5
    &:hover
      background-color rgba(0,0,0,1)
    &-text
      margin-right 20px
      avant-garde-size('s-headline')
    &-length
      garamond-size('l-caption')
    &-button
      margin-right 10px
      width 0
      height 0
      border-style solid
      border-width 5px 0 5px 10px
      border-color transparent transparent transparent white

.venice-footer
  height 500px