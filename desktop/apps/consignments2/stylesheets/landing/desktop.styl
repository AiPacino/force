.consignments2-header
  position relative
  padding gutter
  text-align center
  background-color black
  color white
  height 440px
  display flex
  justify-content center
  align-items center
  flex-direction column
  background-size cover
  background-repeat none
  background-position center center

  &__consign-button
    avant-garde-size('body')
    background-color white
    color black
    min-width 195px
    &:hover
      color purple-color
      background-color white

  &__headline
    max-width 750px
    margin-bottom 15px
    garamond-size('xl-headline')
  &__subheadline
    garamond-size('s-headline')

  &__cta
    margin gutter 0
    > h3
      margin (gutter / 2) 0
      avant-garde-size('m-headline')
    input
      background-color white

.consignments2-sections
  text-align center
  // `.responsive-layout-container`-ish
  margin 0 auto

  h4
    garamond-size('headline')

.consignments2-section
  padding 0 55px
  // @media screen and (min-width: 1440px)
  //   padding 0 150px
  // @media screen and (min-width: 1660px)
  //   padding 0 200px

  &__consign-button.avant-garde-button-black
    avant-garde-size('body')
    background-color black
    color white
    min-width 195px
    margin-top 0px
    &:hover
      color purple-color

  &__about
    &__headline
      margin-bottom 38px
      garamond-size('xl-headline')
    &__description
      block-margins(gutter)
      garamond-size('l-body')

  &__images
    > img
      display inline-block
      max-width 100%
      vertical-align bottom

    &.consignments2-section__images--logos
      display flex
      justify-content space-around
      align-items center
      img
        display block
        max-width 180px
        height auto
        width auto

.consignments2-steps
  padding gutter
  border-bottom 1px solid gray-lighter-color

  &__headline
    garamond-size('l-headline')

  &__steps
    display flex
    justify-content center
    &__step
      text-align center
      &__image
        max-width 100%
        display inline-block
        width 80px
        margin-bottom 35px

      &__title
        avant-garde-size('body')

      &__description
        margin 10px 0 40px
        > span
          float left
          margin-right gutter
          garamond-size('xxl-headline')
        > p
          padding 0 (gutter * 2)
          garamond-size('l-body')

.consignments2-how-consignments-work
  padding-top 60px
  padding-bottom 60px

.consignments2-logos
  background-color gray-lightest-color
  padding-top 60px
  padding-bottom 60px

  &__content
    max-width 1100px
    margin 0 auto

  .consignments2-section__about__headline
    margin-bottom 60px

.consignments2-top-sales
  margin-top 85px
  margin-bottom 40px
  margin-left auto
  margin-right auto
  max-width 1100px

  .consignments2-section__about__headline
    margin-bottom 0px

  .consignments2-section__consign-button.avant-garde-button-black
    margin-top 35px

.consignments2-recently-sold
  padding-top 20px

.consignments2-in-demand
  padding-top 70px
  padding-bottom 70px
  max-width 1100px
  margin 0 auto

  &__artists
    display flex
    flex-wrap wrap

    &__artist
      padding 15px
      width 165px

      h4
        padding-top 10px
        avant-garde-size('body')

     img
        width 150px
        height 150px
        clip-path circle(70px at center)

.consignments2-upcoming-sales
  height 480px
  padding-top 60px
  color white

  &__content
    max-width 900px
    width 60%
    min-width 400px
    margin-left 150px
    text-align left

  &__sales
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items flex-start

    &__sale, &__button
      width 45%
      min-width 300px
      padding-right 10px
      max-width 420px

    &__sale
      padding-bottom 40px
      h5
        avant-garde-size('body')
      p
        garamond-size('l-body')

.consignments2-section__questions
  padding-top 100px
  padding-bottom 70px
  text-align left
  max-width 1100px
  margin 0 auto

  &__header-section
    display flex
    justify-content space-around

    .consignments2-section__about, .consignments2-section__questions__crt-photos
      width 45%
      min-width 400px
      padding-right 10px
      max-width 420px

  &__crt-photos
    display flex

    &__photo
      padding-right 20px

  &__sections
    display flex
    flex-wrap wrap
    justify-content space-around

    &__section
      width 45%
      min-width 400px
      padding-bottom 40px
      padding-right 10px
      max-width 420px

      h4
        padding-bottom 15px

