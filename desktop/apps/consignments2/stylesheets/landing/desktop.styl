.consignments2-header
  position relative
  padding gutter
  text-align center
  background-color black
  color white
  height 440px
  display flex
  justify-content center
  align-items center
  flex-direction column
  background-size cover
  background-repeat none
  background-position center center

  &__consign-button
    background-color white
    color black
    &:hover
      color purple-color
      background-color white

  &__headline
    max-width 750px
    margin-bottom 15px
    garamond-size('xl-headline')
  &__subheadline
    garamond-size('s-headline')

  &__cta
    margin gutter 0
    > h3
      margin (gutter / 2) 0
      avant-garde-size('m-headline')
    input
      background-color white

.consignments2-sections
  text-align center
  // `.responsive-layout-container`-ish
  margin 0 auto

  h4
    garamond-size('headline')

.consignments2-section
  padding 0 55px
  @media screen and (min-width: 1440px)
    padding 0 150px
  @media screen and (min-width: 1660px)
    padding 0 200px

  &__about
    &__headline
      margin-bottom 38px
      garamond-size('l-headline')
    &__description
      block-margins(gutter)
      garamond-size('l-body')

  &__images
    > img
      display inline-block
      max-width 100%
      vertical-align bottom

    &.consignments2-section__images--logos
      display flex
      justify-content center
      img
        display block
        max-width 180px
        height auto
        width auto
      // display inline-block
      // margin (gutter / 2)
      // vertical-align middle !important

.consignments2-steps
  padding gutter
  border-bottom 1px solid gray-lighter-color

  &__headline
    garamond-size('l-headline')

  &__steps
    display flex
    justify-content center
    &__step
      text-align center
      &__image
        max-width 100%
      &__description
        margin 20px 0 40px
        > span
          float left
          margin-right gutter
          garamond-size('xxl-headline')
        > p
          padding 0 (gutter * 2)
          garamond-size('l-body')

.consignments2-how-consignments-work
  height 495px
  padding-top 60px
  padding-bottom 60px

.consignments2-logos
  background-color gray-lightest-color
  height 350px
  padding-top 60px
  padding-bottom 60px
  padding-left 0px
  padding-right 0px

.consignments2-top-sales
  height 318px
  padding-top 60px
  padding-bottom 40px

.consignments2-in-demand
  &__artists
    display flex
    justify-content space-between
    flex-wrap wrap
    margin gutter 0
    &__artist
      width 15%
      margin-bottom gutter
      &__thumbnail
        display block
        > img
          width 100%
      &__name
        margin 10px 0
        avant-garde-size('body')
      &__button
        //

.consignments2-footer
  text-align center
  width 40%
  margin 0 auto
  padding (gutter * 2) 0 (gutter * 4)
  > h3
    margin-bottom gutter

.consignments2-credit
  garamond-size('s-body')
  color gray-color
  font-style italic


mpv-height = 665px
mpv-padding = 20px
// narrow mpv height based on 1024 x 768 viewport
// to catch some differing FAQ lengths
mpv-height-narrow = 710px
