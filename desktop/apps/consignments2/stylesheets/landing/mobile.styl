@media (max-width: 640px)
  .consignments2-layout-header
    margin 20px

  .consignments2-header, .consignments2-footer
    &__headline
      font-size 40px

  .consignments2-footer
    display none

  .consignments2-section
    padding 60px 20px

    &__about
      &__headline
        font-size 30px

    &__images
      &.consignments2-section__images--logos
        flex-wrap wrap

        img
          width 50%
          padding 10px
          padding-bottom 40px

  .consignments2-steps
    &__steps
      flex-direction column

  .consignments2-logos
    padding-bottom 0px

  .consignments2-recently-sold
    padding-top 20px
    max-width 1700px
    padding-bottom 0px

    &__artworks
      height 540px

      &__artwork
        max-width 50%

  .consignments2-in-demand
    &__artists
      &__artist
        padding-bottom 15px 5px

  .consignments2-upcoming-sales
    &--desktop
      display none

    &--mobile
      height 640px
      padding-top 0px
      background-position bottom

      .consignments2-section__about__headline
        text-align center

      .consignments2-upcoming-sales__sales__button
        margin 0 auto
        margin-bottom 30px
        padding-right 0px
        text-align center

      .consignments2-upcoming-sales__sales__sale
        padding-bottom 25px

      .consignments2-upcoming-sales__content
        max-width none
        min-width 0
        padding-top 28px

  .consignments2-section__questions
    &__header-section
      .consignments2-section__about
        width 100%
        text-align center
        padding-right 0px

    &__crt-photos
      display none

    &__sections
      &__section
        width 100%
        padding-right 0px

        h4
          garamond-size('l-body')
          font-weight bold

  .consignments2-faq
    display none

    &__contents
      width 100%
      height 100%
      min-width 0
      max-width none
      padding 20px

    &__close
      top 15px
      right 15px
