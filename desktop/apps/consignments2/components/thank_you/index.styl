.consignments2-submission-thank-you
  max-width 1125px
  text-align center
  margin 0 auto

  &__submitted-work
    width 100%
    background-color gray-lightest-color
    height 120px
    display flex
    align-items center

  &__submitted-message
    garamond-size('l-body')
    margin-right 20px

  &__submitted-image img
    max-height 68px
    margin-left 40px
    margin-right 40px

  &__title
    garamond-size('xl-headline')
    margin-top 75px
    margin-bottom 60px

  &__next-steps
    display flex
    justify-content space-between
    > *
      max-width 290px

  &__instructions
    garamond-size('l-body')
    margin-top 22px

  &__personalize-button
    margin-top 145px
    width 60%
