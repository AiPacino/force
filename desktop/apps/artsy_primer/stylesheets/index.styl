@require '../../../components/stylus_lib'
@require '../../../components/article/stylesheets'
@require '../personalize/stylesheets'

.artsy-primer

  &-h2, &-h3, &-user
    display inline-block
    vertical-align baseline

  &-logo
    width 190px
    display inline-block
    vertical-align middle

  &-header
    position fixed
    top 0
    left 0
    border-bottom 1px solid gray-lighter-color
    width 100%
    background white
    z-index 2
    padding 26px 0 20px

  &-h2
    margin-left 20px
    font-style italic
    color #000
    font-size 30px
    line-height 1.25
    text-decoration none

  &-h3
    margin-left 30px

  &-user
    float right
    border-right 1px solid gray-lighter-color

  &-article
    padding-top 190px
    min-height calc(100vh \- 133px)

  &-next-step
    position fixed
    top 140px
    right 0
    z-index 2
    padding 20px
    width 340px
    background rgba(255,255,255,0.8)
    box-shadow -4px 4px 8px rgba(0,0,0,0.3)

    &-progress
      background gray-lighter-color
      height 5px
      width 100%
      position absolute
      top 0
      left 0

      &-inner
        position absolute
        top 0
        left 0
        width 10%
        height 5px
        background purple-color

    &-header
      avant-garde()
      font-size 20px

    &-label
      garamond-size('s-body')
      margin-top 5px
      color gray-dark-color

    &-button
      background purple-color
      margin-top 20px
      width 100%
