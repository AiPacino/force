.gallery-partnerships2
  hr
    margin 0
    border-top solid 1px #e5e5e5

.gallery-partnerships2-white-signup-button
  avant-garde-size('body')
  display inline-block
  width 190px
  height 45px
  line-height 45px
  background-color white
  color black
  text-align center
  text-decoration none

.gallery-partnerships2-black-signup-button
  @extends .gallery-partnerships2-white-signup-button
  background-color black
  color white

background-size-cover()
  background-position center
  background-repeat no-repeat
  background-size cover

.gallery-partnerships2__header
  background-size-cover()
  height 630px
  color white
  position relative

  .icon-logotype
    color white
    font-size 35px
    position absolute
    top 30px
    left 30px
  &__content-container
    max-width 615px
    text-align center
    margin 0 auto

.gallery-partnerships2__intro
  padding 100px 0
  text-align center

.gallery-partnerships2__gallery-logos
  min-height 130px
  img
    transform: scale(0.5)

.gallery-partnerships2__connect-with-collectors
  min-height 610px

  &__notification-container
    position relative

  &__content_container
    &__wrapper
      width 450px

  &__sub_image
    position absolute
    top 50%
    margin-left auto
    margin-right auto
    left 0
    right 0
    width 482px
    height 146px
    display none

.gallery-partnerships2__stats
  padding 100px 0
  overflow-x hidden

  &__inner-container
    width 450px

  &__slideshow
    width: 678px;
    height: 416px;
    position: absolute;
    top: 40px;
    left: 112px;
    img
      width 667px
      height 416px

.gallery-partnerships2__chat
  min-height 510px
  padding 100px 0

  &__video
    width 100%
    height 100%

  &__content-container
    width 450px

.gallery-partnerships2__folio
  min-height 557px
  padding 100px 0

  &__inner-container
    width 450px

.gallery-partnerships2__testimonials
  height 420px

  &__slideshow
    width 695px
    nav
      margin 0 auto

  &__slideshow__item
    width 695px
    text-align center
    color #999999

.gallery-partnerships2__plans
  min-height 605px

  &__title
    text-align center

  &__table
    border-collapse collapse

    > tbody
      border 1px solid #e5e5e5
      border-collapse separate

    > thead
    > tbody
    > tfoot
      > tr
        > th
          text-align center
          avant-garde-size('body')
          padding-bottom 10px

        > td
          width 240px
          padding 8px 5px
          border-top 1px solid #e5e5e5
          text-align center
          font-weight bold

        > th:first-child
        > td:first-child
          text-align start
          width 340px
          font-weight inherit

      > tr:nth-of-type(even)
        background-color: #f8f8f8

.gallery-partnerships2__form
  &__header
    margin-top 60px
    text-align center

    aside
      width 556px
      margin 0 auto

  &__contact
    text-align center
    margin-bottom 160px

  &__marketo-form
    width 740px
    margin 0 auto 30px auto
    .mktoOffset, .mktoGutter
      display none
    input
      padding 12px !important
      border 2px solid gray-lighter-color
      transition border-color 0.25s
      font-size 17px !important
      &:focus
      &:active
      &.is-active
        border-color purple-color
        outline none
        transition border-color 0.5s
    form, input, .mktoFormCol, input, .mktoFieldWrap
      width 100% !important
    .mktoButtonRow
      margin-top 30px !important
      width 100%
      text-align center !important
    .mktoButtonWrap
      margin 0 !important
      button
        padding 15px !important
        border 0
        color white
        background black
        avant-garde()
        avant-garde-size('l-headline')
        width 100%
        margin-top 10px !important
        transition background-color 0.3s
        font-size 13px !important
        &:hover, &:active
          background purple-color
    form
      margin-top 10px

    label
      avant-garde()
      avant-garde-size('s-headline')
      color black

    .mktoFormRow
      display flex

      .mktoFieldDescriptor
        margin-bottom 10px

      .mktoLabel
        margin-bottom 5px

      .mktoHasWidth
        width 100% !important

      > .mktoFieldDescriptor:nth-child(2n)
        margin-left 30px

    .mktoFormRow:nth-child(4n)
      .mktoFormCol:first-child
        .mktoFieldWrap
          @extends .bordered-select

          &:before
            display none
          &:after
            border-top-color black
            margin-right 7px
            margin-top 6px
          select
            padding 12px 10px 11px
    .mktoAsterix
      display none !important

    @keyframes popup
      0%
        transform scale(1)

      50%
        transform scale(1.1)

      100%
        transform scale(1)

